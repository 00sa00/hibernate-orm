<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.hibernate.test.unidir.onetomany.nonindexed">

<class name="Child">
        <id name="name"/>
        <property name="age" not-null="true"/>
    </class>

    <class name="Parent">
		<id name="name"/>
		<set name="children" cascade="persist,merge">
			<key column="parentName" not-null="true"/>
			<one-to-many class="Child"/>
		</set>
	</class>

</hibernate-mapping>
